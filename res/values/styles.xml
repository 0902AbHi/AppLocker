<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Black">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>

    <!-- For showing and hiding locker -->
    <style name="LockerAnimation">
        <item name="android:inAnimation">@anim/fade_in</item>
        <item name="android:outAnimation">@anim/fade_out</item>
    </style>

    <!-- Themes for locker -->

    <style name="Theme_Dark" parent="@android:style/Theme.Black">
        <item name="android:windowAnimationStyle">@style/LockerAnimation</item>
        <item name="android:buttonStyle">@style/Button_Dark</item>
        <item name="android:windowBackground">@drawable/background_dark</item>
        <item name="android:textColor">@color/button_white</item>
    </style>

    <style name="Button_Dark" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_white</item>
    </style>

    <style name="TextView_Dark" parent="@android:style/Widget.TextView">
        <item name="android:background">@drawable/button_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_white</item>
    </style>

    <style name="Theme_Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>