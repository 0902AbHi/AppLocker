<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <stroke
        android:width="1dp"
        android:color="#4fa5d5" />

    <!--
     Android issue 9161 has a bug which swaps bottomLeftRadius and bottomRightRadius.
     This issue is fixed in API level 12 (Android 3.1)
    -->
    <corners
        android:bottomRightRadius="15dp"
        android:topLeftRadius="15dp" />

    <gradient
        android:angle="270"
        android:endColor="#333333"
        android:startColor="#111111"
        android:type="linear" />

</shape>