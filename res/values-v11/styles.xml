<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!-- API 11 theme customizations can go here. -->
    </style>

    <!-- Themes for locker -->

    <style name="Theme_Dark" parent="@android:style/Theme.Holo">
        <item name="android:windowAnimationStyle">@style/LockerAnimation</item>
        <item name="android:buttonStyle">@style/Button_Dark_Bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button_Dark_Bold" parent="@android:style/Widget.Holo.Button">
        <item name="android:background">@drawable/button_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView_Dark_Bold" parent="@android:style/Widget.Holo.TextView">
        <item name="android:background">@drawable/button_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>