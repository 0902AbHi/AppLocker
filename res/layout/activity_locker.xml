<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llLockerRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/main_vertical_padding"
            android:paddingLeft="@dimen/main_horizontal_padding"
            android:paddingRight="@dimen/main_horizontal_padding"
            android:paddingTop="@dimen/main_vertical_padding" >

            <!-- This is actually an edittext but for the styling a button is used. -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/ivAppIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/image_right_margin"
                    android:contentDescription="@string/icon_desc" />

                <TextView
                    android:id="@+id/tvHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textAppearance="@android:style/TextAppearance.Large" />
            </LinearLayout>

            <Button
                android:id="@+id/tvPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/password_bottom_margin"
                android:layout_marginTop="@dimen/password_top_margin"
                android:cursorVisible="false"
                android:inputType="textPassword"
                android:maxLength="6"
                android:paddingLeft="@dimen/password_horizontal_padding"
                android:paddingRight="@dimen/password_horizontal_padding"
                android:textSize="50sp" >
            </Button>

            <TextView
                android:id="@+id/tvFooter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small" />
        </LinearLayout>
    </ScrollView>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <Button
                android:id="@+id/b1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="@dimen/locker_button_margin"
                android:layout_weight="1"
                android:text="1"
                android:textSize="@dimen/locker_button_text_size" />

            <Button
                android:id="@+id/b2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="@dimen/locker_button_margin"
                android:layout_weight="1"
                android:text="2"
                android:textSize="@dimen/locker_button_text_size" />

            <Button
                android:id="@+id/b3"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="@dimen/locker_button_margin"
                android:layout_weight="1"
                android:text="3"
                android:textSize="@dimen/locker_button_text_size" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <Button
                android:id="@+id/b4"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="@dimen/locker_button_margin"
                android:layout_weight="1"
                android:text="4"
                android:textSize="@dimen/locker_button_text_size" />

            <Button
                android:id="@+id/b5"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="@dimen/locker_button_margin"
                android:layout_weight="1"
                android:text="5"
                android:textSize="@dimen/locker_button_text_size" />

            <Button
                android:id="@+id/b6"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="@dimen/locker_button_margin"
                android:layout_weight="1"
                android:text="6"
                android:textSize="@dimen/locker_button_text_size" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <Button
                android:id="@+id/b7"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="@dimen/locker_button_margin"
                android:layout_weight="1"
                android:text="7"
                android:textSize="@dimen/locker_button_text_size" />

            <Button
                android:id="@+id/b8"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="@dimen/locker_button_margin"
                android:layout_weight="1"
                android:text="8"
                android:textSize="@dimen/locker_button_text_size" />

            <Button
                android:id="@+id/b9"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="@dimen/locker_button_margin"
                android:layout_weight="1"
                android:text="9"
                android:textSize="@dimen/locker_button_text_size" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <Button
                android:id="@+id/bOK"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="@dimen/locker_button_margin"
                android:layout_weight="1"
                android:text="@string/upper_ok"
                android:textSize="@dimen/locker_button_small" />

            <Button
                android:id="@+id/b0"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="@dimen/locker_button_margin"
                android:layout_weight="1"
                android:text="0"
                android:textSize="@dimen/locker_button_text_size" />

            <Button
                android:id="@+id/bBack"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="@dimen/locker_button_margin"
                android:layout_weight="1"
                android:text="@string/upper_back"
                android:textSize="@dimen/locker_button_small" />
        </TableRow>
    </TableLayout>

</LinearLayout>