<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/llButtonWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="5dp" >

        <Button
            android:id="@+id/bLockAll"
            style="@style/Button_Dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="@string/applist_lock_all" >
        </Button>

        <Button
            android:id="@+id/bUnlockAll"
            style="@style/Button_Dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="@string/applist_unlock_all" >
        </Button>

        <Button
            android:id="@+id/bFinish"
            style="@style/Button_Dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@android:string/ok" >
        </Button>
    </LinearLayout>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/llButtonWrapper"
        android:background="@drawable/separator" />

    <ListView
        android:id="@+id/lvAppList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/separator" >
    </ListView>

</RelativeLayout>