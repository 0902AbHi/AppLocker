<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ApplistTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/llButtonWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bToggleAll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/element_horizontal_margin"
            android:layout_weight="1" >
        </Button>

        <Button
            android:id="@+id/bFinish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/element_horizontal_margin"
            android:layout_weight="1"
            android:text="@android:string/ok" >
        </Button>
    </LinearLayout>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/llButtonWrapper"
        android:background="@drawable/separator" />

    <ListView
        android:id="@+id/lvAppList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/separator"
        android:scrollbarStyle="insideOverlay" >
    </ListView>

</RelativeLayout>